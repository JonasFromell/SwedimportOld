<% @children.each do |category| %>
	<div class="categoryBox fl">
		<div class="img">
			<% category.photos.each do |photo| %>
				<% if category.has_children? %>
					<%= link_to image_tag(photo.image_url(:thumb)), category %>
				<% else %>
					<%= link_to image_tag(photo.image_url(:thumb)), category_products_path(category) %>
				<% end %>
			<% end %>
		</div>
		<div class="description">
			<% if category.has_children? %>
				<h3><%= link_to category.name, category %></h3>
			<% else %>
				<h3><%= link_to category.name, category_products_path(category) %></h3>
			<% end %>
		</div>
	</div>
<% end %>