<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "reset", "application", "formtastic", "formtastic_changes", "uploadify" %>
    <%= javascript_include_tag :defaults, "admin", "jquery.treetable.min", "jquery.uploadify.v2.1.4.min", "swfobject" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
			<div id="header">
				<div class="hdrl"></div>
				<div class="hdrr"></div>
				<h1><%= link_to "Sweadmin", admin_categories_path %></h1>
				<ul id="nav">
					
				</ul>
				<p class="user">Inloggad som: <%= current_admin.email %> | <%= link_to "Logga ut", destroy_admin_session_path %>
				</p>
			</div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>

      <%= yield %>
    </div>
		<%= yield(:javascript) %>
  </body>
</html>
